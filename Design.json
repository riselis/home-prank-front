{
    "meta": {
        "name": "Home Prank App Design System",
        "theme": "Modern Gradient Home Prank",
        "style_keywords": [
            "soft gradients",
            "neumorphism-lite",
            "rounded corners",
            "minimal shadows",
            "vivid accent colors",
            "clean sans-serif typography"
        ],
        "base_device": "Mobile iOS (375x812)",
        "tone": "friendly, modern, confident, digital banking aesthetic"
    },
    "colors": {
        "primary": "#7B5CFF",
        "primaryGradient": [
            "#7B5CFF",
            "#C39BFF"
        ],
        "accent": "#6C63FF",
        "success": "#4CAF50",
        "error": "#FF6B6B",
        "warning": "#FFB74D",
        "backgroundLight": "#F9F9FC",
        "backgroundGradient": [
            "#F9F9FC",
            "#FFFFFF"
        ],
        "textPrimary": "#1C1C1E",
        "textSecondary": "#6B6B6B",
        "textMuted": "#9E9E9E",
        "surface": "#FFFFFF",
        "shadow": "rgba(0, 0, 0, 0.05)"
    },
    "typography": {
        "fontFamily": "Poppins, SF Pro Display, Inter",
        "weights": {
            "regular": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
        },
        "scale": {
            "h1": {
                "size": 28,
                "weight": "bold",
                "lineHeight": 1.3
            },
            "h2": {
                "size": 22,
                "weight": "semibold"
            },
            "subtitle": {
                "size": 16,
                "weight": "medium"
            },
            "body": {
                "size": 14,
                "weight": "regular"
            },
            "caption": {
                "size": 12,
                "weight": "regular"
            }
        }
    },
    "spacing": {
        "xs": 4,
        "sm": 8,
        "md": 16,
        "lg": 24,
        "xl": 32
    },
    "radius": {
        "small": 8,
        "medium": 16,
        "large": 24,
        "pill": 100
    },
    "layout": {
        "grid": {
            "columns": 4,
            "gutter": 16,
            "margin": 24
        },
        "safeArea": {
            "top": 44,
            "bottom": 34
        },
        "navigationBar": {
            "height": 84,
            "background": "#FFFFFF",
            "shadow": "rgba(0,0,0,0.08)"
        }
    },
    "components": {
        "button": {
            "variants": {
                "primary": {
                    "background": "#7B5CFF",
                    "color": "#FFFFFF",
                    "radius": 16,
                    "height": 48,
                    "fontWeight": "semibold",
                    "shadow": "0 4px 10px rgba(123,92,255,0.3)"
                },
                "secondary": {
                    "background": "#FFFFFF",
                    "border": "1px solid #E0E0E0",
                    "color": "#1C1C1E"
                }
            }
        },
        "card": {
            "background": "#FFFFFF",
            "radius": 20,
            "shadow": "0 4px 20px rgba(0,0,0,0.04)",
            "padding": 16
        },
        "input": {
            "background": "#FFFFFF",
            "borderRadius": 12,
            "borderColor": "#E0E0E0",
            "padding": [
                12,
                16
            ]
        },
        "icon": {
            "size": 24,
            "colorPrimary": "#7B5CFF",
            "colorMuted": "#B0B0B0"
        },
        "tabBar": {
            "background": "#FFFFFF",
            "iconSize": 24,
            "labelFontSize": 12,
            "activeColor": "#7B5CFF",
            "inactiveColor": "#BDBDBD"
        },
        "transactionItem": {
            "layout": "horizontal",
            "iconSize": 32,
            "textStyle": "body",
            "statusColors": {
                "success": "#4CAF50",
                "failed": "#FF6B6B"
            }
        },
        "cardDisplay": {
            "backgroundGradient": [
                "#7B5CFF",
                "#C39BFF"
            ],
            "textColor": "#FFFFFF",
            "radius": 20,
            "infoFont": "monospace"
        }
    },
    "effects": {
        "gradientDirection": "to top right",
        "blurIntensity": 10,
        "glassMorphism": {
            "enabled": true,
            "backgroundOpacity": 0.4,
            "blur": 16,
            "border": "1px solid rgba(255,255,255,0.3)"
        },
        "shadowSoft": "0 8px 20px rgba(0,0,0,0.08)"
    },
    "animation": {
        "default": {
            "duration": 300,
            "easing": "ease-in-out"
        },
        "buttonTap": {
            "scale": 0.96,
            "duration": 150
        },
        "screenTransition": {
            "type": "slide",
            "direction": "horizontal",
            "duration": 350
        }
    },
    "iconography": {
        "style": "Rounded Vector Icons",
        "strokeWidth": 1.8,
        "filledPrimary": true
    },
    "accessibility": {
        "minimumContrastRatio": 4.5,
        "touchTarget": 44,
        "fontScaling": true,
        "colorBlindSafe": true
    },
    "branding_guidelines": {
        "imageryStyle": "isometric 3D illustrations with smooth gradients and floating coins/cards",
        "colorMood": "soft pastel with vivid accent highlights",
        "motionFeel": "light, smooth, and organic transitions"
    }
}